# Database Configuration
DATABASE_URL=postgres://postgres:password@localhost:5432/speedrail_development

# Redis Configuration
REDIS_URL=redis://localhost:6379/0

# Rails Configuration
RAILS_ENV=development
RAILS_MAX_THREADS=5
RAILS_LOG_LEVEL=info

# Application Configuration
BASE_URL=http://localhost:3000

# Stripe Configuration (for payments)
STRIPE_PUBLISHABLE_KEY=pk_test_your_stripe_publishable_key
STRIPE_SECRET_KEY=sk_test_your_stripe_secret_key
STRIPE_WEBHOOK_SECRET=whsec_your_webhook_secret

# Postmark Configuration (for emails)
POSTMARK_API_TOKEN=your_postmark_api_token

# Rewardful Configuration (for referrals)
REWARDFUL_API_KEY=your_rewardful_api_key

# Admin Configuration
ADMIN_EMAIL=admin@yourdomain.com
COMPANY_NAME=Your Company Name

# Security
SECRET_KEY_BASE=your_secret_key_base_here

# CORS Configuration (comma-separated domains)
ALLOWED_ORIGINS=http://localhost:3000,https://yourdomain.com
